static idt_desc _idt[256];
static idtr _idtr;


void idt_install()
{



 __asm__("lidt %0" ::"m"(_idtr));
}

int install_ir_handler(uint32_t i, uint8_t flags, uint16_t selector, IRQ_HNDLR irq)
{



 if (i > 256)
  return 0;
 if (!irq)
  return 0;


 uint32_t handler_address = (uint32_t)irq;


 _idt[i].base_low = (uint16_t)(handler_address & 0xffff);
 _idt[i].base_high = (uint16_t)((handler_address >> 16) & 0xffff);
 _idt[i].reserved = 0;
 _idt[i].flags = (uint8_t)flags;
 _idt[i].selector = selector;

 return 0;
}

int idt_init(uint16_t code_selector)
{



 _idtr.limit = sizeof(idt_desc) * 256 - 1;
 _idtr.base = (uint32_t)&_idt[0];

 int i;

 for (i = 0; i < 32; ++i)
  install_ir_handler(32, 0x8E, code_selector, default_handler);


 idt_install();

 return 0;
}

void default_handler(void)
{
 terminal_writestring("INTERRUPT");
 while(true)
 {
  halt();
 }



 __asm__("pusha");

 halt();
 end_of_interrupt();


 __asm__("popa");
 __asm__("leave");
 __asm__("iret");
}

void end_of_interrupt(void)
{

 port_byte_out(0x20, 0x20);
 port_byte_out(0xA0, 0x20);
}
